<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    android:elevation="3dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/venueTV"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:scrollHorizontally="false"/>

            <TextView
                android:id="@+id/dateTV"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/team1Logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/cricket_" />

            <TextView
                android:id="@+id/team1TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px" />

        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/team2Logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/cricket_" />

            <TextView
                android:id="@+id/team2TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Match Status"
                android:textColor="#000" />

            <TextView
                android:id="@+id/matchStatusTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px" />
        </TableRow>

        <TableRow>
        <TextView
            android:text="Match Type"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"/>

            <TextView
                android:id="@+id/matchTypeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10px" />
        </TableRow>

    </TableLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerInfoActivity">

    <ImageView
        android:id="@+id/player_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/profile_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_image"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:text="Player Name"
        android:id="@+id/player_name"
        android:textAlignment="center"
        android:textSize="16pt"/>

    <TextView
        android:id="@+id/player_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="Player Role"
        android:textAlignment="center"
        android:textSize="13pt" />

    <TextView
        android:id="@+id/player_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_role"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="Player Nationality"
        android:textAlignment="center"
        android:textSize="13pt" />

    <TextView
        android:id="@+id/player_batting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_country"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="Player Batting Style"
        android:textAlignment="center"
        android:textSize="13pt" />

    <TextView
        android:id="@+id/player_bowling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_batting"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="Player Bowling Style"
        android:textAlignment="center"
        android:textSize="13pt" />

</RelativeLayout>